<div class="wrapper">

  <div class="post">
    <img class="image" src="<%= @sighting['image_url'] %>" alt="" />
    <img class="image" src="<%= sighting.picture.url %>">
    <p class="location"><%= @sighting['name'] %></p>
    <%if current_user.id == @sighting['user_id'] %>

      <a href="/sightings/all/<%= @sighting['id'] %>/edit">Edit</a>

      <form action="/sightings/all/<%= @sighting['id'] %>/delete" method="post">
        <button>Delete</button>
      </form>

    <% else %>

    <p></p>

    <% end %>
  </div>

  <h3>Comments</h3>
  <ol>
    <% @comments.each do |comment| %>

      <li><%= comment.user.username%> said: <%= comment.body %></li>
    <% end %>
  </ol>

  <form action="/comments" method="post">
    <input type="hidden" name="sighting_id" value="<%= @sighting['id'] %>"> <!-- a hidden input that collects the id of current trip and attaches to the trip_id column in the comments table - but sit is the the post '/comments' method that stores it in the table-->
    <textarea name="body" rows="8" cols="40"></textarea> <!-- sends comment to body column of table -->
    <button>Post Comment</button>
  </form>

  </div>
